#!/usr/bin/env bash
# echo 'Browser' && echo 'Home' && echo 'Draft' && echo 'Sensors' 
if [[ $# -eq 1 ]]; then
    selected=$1
else
	selected=$((echo $'Home\nDraft\nSensors' && zoxide query -l && find ~/work/ -mindepth 1 -maxdepth 1 -type d ) |fzf --height=80% --layout=reverse  --border --margin=1 --padding=1
)
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then

    tmux new-session -s $selected_name -c $selected
	exit 0
fi


if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected

fi

if [ "$selected_name" = "Sensors" ]; then
	tmux new-session -ds $selected_name -c $selected
	tmux send-keys -t $selected_name "watch 'sensors'" Enter
fi

if [ "$selected_name" = "_dotfiles" ]; then
	tmux new-session -ds $selected_name -c $selected
	tmux send-keys -t $selected_name 'nvim -c "Telescope git_files"' Enter
fi


tmux switch-client -t $selected_name


